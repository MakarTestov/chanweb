@using ComScience.Web.Models;
@model IEnumerable<Article>

<div class="container articles-block">
    <div class="row">
        <div class="col-lg">
            <div class="card mb-3">
                <div class="card-header">Последние новости</div>
                <div class="card-body">
                    <div class="accordion accordion-flush" id="articles">
                        @foreach (var item in Model)
                        {
                            <div class="accordion-item">
                                <h2 class="accordion-header">
                                    <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#@item.Tag" aria-expanded="false" aria-controls="@item.Tag">
                                        <span class="fst-italic">@String.Format("{0:dd}.{0:MM}.{0:yyyy}", item.DatePublication)</span> &nbsp;&nbsp; @item.Title
                                    </button>
                                </h2>
                                <div id="@item.Tag" class="accordion-collapse collapse" data-bs-parent="#articles">
                                    <div class="accordion-body">
                                        <img class="img-fluid rounded mb-3" src="@item.ImgPath" alt="@item.ImgAlt">
                                        @Html.Raw(item.ContentHTML)
                                        <div class="d-flex float-end text-small">
                                            <p class="">Опубликовано <span>@String.Format("{0:dd}.{0:MM}.{0:yyyy}", item.DatePublication)</span></p>
                                        </div>
                                        <div class="clearfix"></div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
